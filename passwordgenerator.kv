#:kivy 1.0.9
#:import Clipboard kivy.core.clipboard.Clipboard

<Generator>:
    Button:
        text: "Generate Password"
        center_x: root.width * 3 / 4
        size: 150, 50
        center_y: root.height  / 3
        size_hint: None, None
        on_press: root.generate()
    
    Label:
        text: str(root.password)
        center_x: root.width / 2
        center_y: root.height * 2 / 3 
        font_size: 40
    
    Button:
        text: "Copy Password"
        center_x: root.width / 4
        size: 150, 50
        center_y: root.height / 3
        size_hint: None, None
        on_press: Clipboard.copy(root.password)